<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.wallet.ReceiveMoney">

    <TextView
        android:id="@+id/receive_money_page_header_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="32dp"
        android:elevation="@dimen/xSmallDp"
        android:gravity="center"
        android:text="Receive Money from an OpenPos Account"
        android:textColor="#6A1B9A"
        android:textSize="@dimen/mediumSp"
        app:layout_constraintBottom_toTopOf="@id/receive_money_page_money_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/receive_money_page_money_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:padding="@dimen/xSmallDp"
        android:text="Write the bill :"
        app:layout_constraintBottom_toTopOf="@id/receive_money_page_error_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/receive_money_page_header_text" />

    <TextView
        android:id="@+id/receive_money_page_error_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginEnd="36dp"
        android:padding="@dimen/xSmallDp"
        android:textColor="#C62828"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/receive_money_container"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/receive_money_page_money_text" />

    <LinearLayout
        android:id="@+id/receive_money_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:gravity="center|center_horizontal|center_vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/receive_money_page_error_text">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/receive_money_page_text"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/xSmallDp"
            android:layout_weight="2"
            app:boxBackgroundMode="outline"
            app:hintTextColor="#E64A19"
            app:boxStrokeWidthFocused="2dp"
            app:endIconMode="none"
            app:endIconTint="@color/black"
            app:errorEnabled="false"
            app:hintEnabled="false">


            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/receive_money_page_text_field"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="123456789"
                android:inputType="number"
                android:maxLength="9"
                android:singleLine="true"
                android:textColor="#000000" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/receive_money_page_decimal_text"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/xSmallDp"
            android:layout_weight="3"
            app:boxBackgroundMode="outline"
            app:hintTextColor="#E64A19"
            app:boxStrokeWidthFocused="2dp"
            app:endIconMode="none"
            app:endIconTint="@color/black"
            app:errorEnabled="false"
            app:hintEnabled="false">


            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/receive_money_page_decimal_text_field"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="12"
                android:inputType="number"
                android:maxLength="2"
                android:singleLine="true"
                android:textColor="#000000" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/receive_money_page_submit_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/xSmallDp"
            android:backgroundTint="#FFFFFF"
            android:clickable="true"
            android:tint="@color/white"
            app:backgroundTint="#C62828"
            app:fabCustomSize="50dp"
            app:rippleColor="#C4C62828"
            app:srcCompat="@drawable/ic_add" />
    </LinearLayout>

    <TextView
        android:id="@+id/receive_money_page_money_text_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:padding="@dimen/xSmallDp"
        android:text="Write the bill and the description that you want to write below:"
        app:layout_constraintBottom_toTopOf="@id/receive_money_description_container"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/receive_money_container" />

    <LinearLayout
        android:id="@+id/receive_money_description_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/receive_money_page_money_text_2">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/password_and_security_settings_password_1_text"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/xSmallDp"
            app:hintTextColor="#E64A19"
            app:boxStrokeWidthFocused="2dp"
            app:endIconMode="clear_text"
            app:endIconTint="@color/black"
            app:errorEnabled="false"
            app:hintEnabled="false">


            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/password_and_security_settings_password_1_text_field"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Description over here..."
                android:inputType="text"
                android:singleLine="true"
                android:textColor="#000000"
                android:textSize="@dimen/smallSp" />
        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>