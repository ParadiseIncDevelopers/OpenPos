<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/wallet_logs_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/mediumDp"
    android:background="@drawable/wallet_logs_border"
    android:gravity="center"
    android:orientation="horizontal"
    android:padding="@dimen/smallDp">

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:padding="@dimen/xSmallDp"
        app:srcCompat="@drawable/ic_withdraw" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:background="@drawable/wallet_logs_border_container"
                android:padding="4dp"
                android:text="E-mail :"
                android:textSize="@dimen/smallSp" />

            <TextView
                android:id="@+id/wallet_logs_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/wallet_logs_border_container"
                android:padding="4dp"
                android:text="TextView"
                android:textSize="@dimen/smallSp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:background="@drawable/wallet_logs_border_container"
                android:padding="4dp"
                android:text="Rest :"
                android:textSize="@dimen/xSmallSp" />

            <TextView
                android:id="@+id/wallet_logs_rest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/wallet_logs_border_container"
                android:padding="4dp"
                android:text="TextView"
                android:textSize="@dimen/xSmallSp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:background="@drawable/wallet_logs_border_container"
                android:padding="4dp"
                android:text="Spend :"
                android:textSize="@dimen/xSmallSp" />

            <TextView
                android:id="@+id/wallet_logs_spend"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/wallet_logs_border_container"
                android:padding="4dp"
                android:text="TextView"
                android:textSize="@dimen/xSmallSp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:background="@drawable/wallet_logs_border_container"
                android:padding="4dp"
                android:text="Description :"
                android:textSize="@dimen/xSmallSp" />

            <TextView
                android:id="@+id/wallet_logs_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/wallet_logs_border_container"
                android:padding="4dp"
                android:text="TextView"
                android:textSize="@dimen/xSmallSp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:background="@drawable/wallet_logs_border_container"
                android:padding="4dp"
                android:text="Date :"
                android:textSize="@dimen/xSmallSp" />

            <TextView
                android:id="@+id/wallet_logs_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/wallet_logs_border_container"
                android:padding="4dp"
                android:text="TextView"
                android:textSize="@dimen/xSmallSp" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>