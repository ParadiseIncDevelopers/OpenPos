<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserApprovalRegister">

    <ImageView
        android:id="@+id/user_approval_image_content"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_splash_screen" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/user_approval_image_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/mediumDp">

            <TextView
                android:id="@+id/user_approval_register_header_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/largeDp"
                android:elevation="@dimen/xSmallDp"
                android:gravity="center"
                android:text="Register for approval"
                android:textColor="#6A1B9A"
                android:textSize="@dimen/mediumSp" />

            <TextView
                android:id="@+id/user_approval_register_sub_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/smallDp"
                android:text="In order to open an account according to the laws of the Republic of Turkey, you must upload the front and back of your ID card to your account. (After approval this data will be erased automatically)." />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/user_approval_register_ids_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/user_approval_image_id_front"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:src="@drawable/ic_id_card"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/user_approval_image_id_back"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/user_approval_image_id_front_text" />

                <ImageView
                    android:id="@+id/user_approval_image_id_back"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:src="@drawable/ic_id_card"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/user_approval_image_id_front"
                    app:layout_constraintTop_toBottomOf="@id/user_approval_image_id_back_text" />

                <TextView
                    android:id="@+id/user_approval_image_id_front_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="@dimen/smallDp"
                    android:text="Front of Id card"
                    app:layout_constraintBottom_toTopOf="@+id/user_approval_image_id_front"
                    app:layout_constraintEnd_toStartOf="@id/user_approval_image_id_back_text"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/user_approval_image_id_back_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="@dimen/smallDp"
                    android:text="Back of Id card"
                    app:layout_constraintBottom_toTopOf="@id/user_approval_image_id_back"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/user_approval_image_id_front_text"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <Button
                android:id="@+id/user_approval_submit_button"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Create account"
                android:textAllCaps="false"
                android:textColor="#0277BD"
                app:rippleColor="#B00277BD"
                app:strokeColor="#0277BD"
                app:strokeWidth="1dp" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>