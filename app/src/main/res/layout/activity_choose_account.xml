<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.menu.ChooseAccount">

    <ImageView
        android:id="@+id/choose_account_image_content"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:padding="@dimen/smallDp"
        android:src="@drawable/ic_receivemoney"
        android:tint="#6A1B9A"
        app:layout_constraintBottom_toTopOf="@id/choose_account_recycler_view"
        app:layout_constraintEnd_toStartOf="@+id/choose_account_header_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/choose_account_header_text"
        style="@style/ThemeOverlay.Material3.AutoCompleteTextView.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:elevation="@dimen/xSmallDp"
        android:gravity="center"
        android:padding="@dimen/mediumDp"
        android:text="Choose one of your bank account"
        android:textColor="#6A1B9A"
        android:textSize="@dimen/mediumSp"
        app:layout_constraintBottom_toTopOf="@+id/choose_account_recycler_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/choose_account_image_content"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/choose_account_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/any_view_container"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/choose_account_image_content"
        app:reverseLayout="true"
        app:stackFromEnd="true" />
</androidx.constraintlayout.widget.ConstraintLayout>