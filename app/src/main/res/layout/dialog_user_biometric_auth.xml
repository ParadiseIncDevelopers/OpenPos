<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/smallDp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="visible">

        <TextView
            android:id="@+id/dialog_user_biometric_auth_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Authenticate with your fingerprint if you have a registered account" />

        <Button
            android:id="@+id/dialog_user_biometric_auth_button"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/largeDp"
            android:layout_marginRight="@dimen/largeDp"
            android:enabled="true"
            android:text="Authenticate"
            android:textAllCaps="false"
            android:textColor="#0277BD"
            app:rippleColor="#740277BD"
            app:strokeColor="#0277BD"
            app:strokeWidth="1dp" />
    </LinearLayout>

</LinearLayout>