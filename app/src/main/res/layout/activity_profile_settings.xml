<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_backgr"
    tools:context=".main.menu.settings.ProfileSettings">

    <ImageView
        android:id="@+id/profile_settings_image_content"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:background="@drawable/any_view_container"
        android:tint="#6A1B9A"
        app:layout_constraintEnd_toStartOf="@id/profile_settings_header_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_user" />

    <TextView
        android:id="@+id/profile_settings_header_text"
        style="@style/ThemeOverlay.Material3.AutoCompleteTextView.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/any_view_container"
        android:elevation="@dimen/xSmallDp"
        android:gravity="center"
        android:padding="@dimen/mediumDp"
        android:text="Profile settings"
        android:textColor="#6A1B9A"
        android:textSize="@dimen/mediumSp"
        app:layout_constraintBottom_toBottomOf="@+id/profile_settings_image_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/profile_settings_image_content"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profile_settings_image_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:padding="@dimen/mediumDp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/profile_settings_image_content">

            <Button
                android:id="@+id/profile_settings_password_and_security_settings_button"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Password and security settings"
                android:textAllCaps="false"
                android:textColor="#6A1B9A"
                app:icon="@drawable/ic_add"
                app:iconSize="35dp"
                app:iconTint="#6A1B9A"
                app:rippleColor="#AB6A1B9A"
                app:strokeColor="#6A1B9A"
                app:strokeWidth="1dp" />

            <CheckBox
                android:id="@+id/profile_settings_remember_user_check_box"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Remember user in this device" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/password_and_security_settings_current_password_text"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/xSmallDp"
                app:boxStrokeWidthFocused="2dp"
                app:endIconMode="clear_text"
                app:endIconTint="@color/colorOnPrimary"
                app:errorEnabled="true"
                app:hintEnabled="true"
                app:hintTextColor="#E64A19">


                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/password_and_security_settings_current_password_text_field"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:enabled="false"
                    android:hint="Email"
                    android:inputType="textEmailAddress"
                    android:singleLine="true"
                    android:textColor="#000000"
                    android:textSize="@dimen/smallSp" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/password_and_security_settings_password_1_text"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/xSmallDp"
                app:boxStrokeWidthFocused="2dp"
                app:endIconMode="clear_text"
                app:endIconTint="@color/colorOnPrimary"
                app:errorEnabled="true"
                app:hintEnabled="true"
                app:hintTextColor="#E64A19">


                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/password_and_security_settings_password_1_text_field"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Name and Surname"
                    android:inputType="text"
                    android:singleLine="true"
                    android:textColor="#000000"
                    android:textSize="@dimen/smallSp" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/password_and_security_settings_password_2_text"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/xSmallDp"
                app:boxStrokeWidthFocused="2dp"
                app:endIconMode="clear_text"
                app:endIconTint="@color/colorOnPrimary"
                app:errorEnabled="true"
                app:hintEnabled="true"
                app:hintTextColor="#E64A19">


                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/profile_settings_phone_number_text_field"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Phone Number"
                    android:inputType="phone"
                    android:singleLine="true"
                    android:textColor="#000000"
                    android:textSize="@dimen/smallSp" />
            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/profile_settings_update_submit"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:text="Update Profile"
                android:textAllCaps="false"
                android:textColor="#0277BD"
                app:rippleColor="#B00277BD"
                app:strokeColor="#0277BD"
                app:strokeWidth="1dp" />

        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>